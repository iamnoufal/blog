{{!< default}}

{{#post}}

<style>
  .post-content-header {
    display: flex;
    background-image: url("{{img_url feature_image}}");
    background-size: cover;
    height: 100vh;
    width: 100%;
    background-position: center center
  }  
</style>

<article class="post-content p-0 {{post_class}}">

  <header class="post-content-header m-0 gh-canvas">
    <div style="background: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.8))" class="w-100 d-flex">
      <div class="container mt-auto mb-5">
        <h1 class="post-content-title mb-2 text-white text-start mw">{{title}}</h1>
        {{#if custom_excerpt}}
          <p class="post-content-excerpt fs-3 text-white text-start ms">{{custom_excerpt}}</p>
        {{/if}}
        <p class="post-content-excerpt fs-4 text-white">
          <time class="byline-meta-date" datetime="{{date format="YYYY-MM-DD"}}">{{date}}</time>
          <span class="fs-3 mx-2 fw-semibold" style="opacity: 1;">â€¢</span>
          {{reading_time}} 
        </p>
      </div>
    </div>
  </header>


  <div class="post-content-body gh-content container-md">
    {{content}}
  </div>

  {{#if comments}}
    <div class="gh-comments container">
      {{comments}}
    </div>
  {{/if}}

</article>
{{/post}}
